---
import Slide from "../../components/Slide.astro";
import { currentEvent } from "../../events";
---

<Slide
  data-background-image={currentEvent.introImg}
  data-background-size="contain"
/>

<style is:global>
  @media (min-aspect-ratio: 16/9) {
    .backgrounds > .slide-background:first-child.present {
      background-image: linear-gradient(transparent 30%, black 0px);
    }
  }
</style>
