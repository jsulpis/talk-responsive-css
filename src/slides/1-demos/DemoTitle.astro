---
import TTMCCard from "./TTMCCard.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<section>
	<div class="container">
		<h1>{title}</h1>
		<img src="/mockups/demos/text-card/phone-landscape.png" />
		<div class="card-wrapper">
			<TTMCCard />
		</div>
	</div>
</section>

<style>
	.container {
		display: grid;
		grid-template-columns: 70% 30%;
		grid-template-rows: 50% 50%;
		place-items: center;
	}

	.card-wrapper {
		grid-column: 2;
		grid-row: 1 / 3;
	}
</style>
