---
export interface Props {
	activeLevel?: number;
	levels: string[];
}

const { activeLevel, levels } = Astro.props;
---

<article>
	<header>
		<span data-id="card-subtitle">Tu te mets combien en...</span>
		<h3>RESPONSIVE CSS ?</h3>
	</header>
	<div>
		<svg
			data-id="card-svg"
			aria-hidden="true"
			xmlns="http://www.w3.org/2000/svg"
			width="24"
			height="24"
			fill="white"
			viewBox="0 0 24 24"
		>
			<path
				d="m3 2 1.578 17.834L12 22l7.468-2.165L21 2H3Zm13.3 14.722-4.293 1.204H12l-4.297-1.204-.297-3.167h2.108l.15 1.526 2.335.639 2.34-.64.245-3.05h-7.27l-.187-2.006h7.64l.174-2.006H6.924l-.176-2.006h10.506l-.954 10.71Z"
			></path>
		</svg>
		<ol>
			{
				levels.map((level, i) => (
					<li>
						<span class="index">{i + 1}</span>
						{i + 1 === activeLevel ? (
							<strong class="description">{level}</strong>
						) : (
							<span class="description">{level}</span>
						)}
					</li>
				))
			}
		</ol>
	</div>
</article>

<style>
	:root {
		--card-color: #1168b6;
	}

	header span,
	h3 {
		color: white;
		line-height: 1.7rem;
	}

	header {
		display: flex;
		flex-direction: column;
		margin-right: 20%;
		margin-bottom: 1rem;
	}

	header span {
		font-size: 1.125rem;
		margin-bottom: 0.25em;
	}

	h3 {
		font-size: 2rem;
		margin-bottom: 0;
	}

	svg {
		position: absolute;
		top: -4rem;
		right: -0.5rem;
		width: 3rem;
		height: 3rem;
		padding: 1rem;
		border-radius: 1000px;
		background: var(--card-color);
	}

	article {
    letter-spacing: .01em;
		background: var(--card-color);
		border-radius: 1.75rem;
		padding: 1rem;
    box-shadow: 0 0 40px -20px black;
	}

	div {
		position: relative;
		background: beige;
		border-radius: .75rem;
		padding: 1rem 2rem;
	}

	ol {
		list-style-type: none;
		padding: 0;
		margin: 0;
	}

	li {
		display: grid;
		grid-template-columns: 5ch 1fr;
		font-size: 1.4rem;
		align-items: center;
		padding-block: 0.25em;

		.index {
			color: var(--card-color);
			letter-spacing: -0.1em;
			text-align: center;
			font-size: 1.7em;
			line-height: 0.9em;
			font-weight: 900;
		}

		.description {
			font-size: 1em;

      strong& {
        font-weight: 900;
      }
		}

		+ li {
			border-top: 1px solid #888;
		}
	}
</style>
