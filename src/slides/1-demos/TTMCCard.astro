<style>
	:root {
		--card-color: rebeccapurple;
	}

	span, h3 {
		color: white;
		line-height: 1.7rem;
	}

	header {
		display: flex;
		flex-direction: column;
		margin-right: 20%;
		margin-bottom: 1rem;
	}

	span {
		font-size: 0.8rem;
	}

	h3 {
		font-size: 1.7rem;
		margin-bottom: 0;
	}

	svg {
		position: absolute;
		top: -4rem;
		right: -0.5rem;
		width: 3rem;
		height: 3rem;
		padding: 1rem;
		border-radius: 1000px;
		background: var(--card-color);
	}


	div:has(div) {
		background: var(--card-color);
		border-radius: 2rem;
		padding: 1rem;
		position: relative;
	}

	div > div {
		position: relative;
		background: beige;
		border-radius: 2rem;
		padding: 1rem 1rem 1rem 0;
	}

	@counter-style empty-style {
		system: extends decimal;
		suffix: ' ';
	}

	ol {
		display: block;
		list-style: empty-style;
	}

	li {
		&::marker{
			font-size: 3rem;
			font-weight: bold;
			color: var(--card-color);
		};

		& + li {
			border-top: 1px solid black;
		}

		font-size: 2rem;
	}
</style>
