---
const { minWidth } = Astro.props;
---

<div class="counter" data-id="counter">
	<button
		class="btn moins"
		onclick="event.target.nextElementSibling.textContent--">-</button
	>
	<span style={{ minWidth }}>99</span>
	<button
		class="btn plus"
		onclick="event.target.previousElementSibling.textContent++">+</button
	>
</div>

<style>
	.counter {
		display: inline-flex;
		align-items: center;
		background-color: white;
		font-size: 2.5rem;
		gap: 0.75em;
		padding: 1em;
		border-radius: 0.5em;
		box-shadow: 0 0 0.5em rgba(0, 0, 0, 0.1);
	}

	.btn {
		font-size: inherit;
		width: 1.5em;
		height: 1.5em;
		border: none;
		background-color: #4caf50;
		color: white;
		cursor: pointer;
		border-radius: 0.125em;
		transition: background-color 0.3s;
	}

	.btn:hover {
		background-color: #45a049;
	}
</style>
